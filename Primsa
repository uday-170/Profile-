generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  name      String?
  email     String?   @unique
  username  String    @unique
  password  String
  projects  Project[]
  certs     Certificate[]
  resume    Resume?
  createdAt DateTime  @default(now())
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  link        String?
  fileUrl     String?
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  createdAt   DateTime @default(now())
}

model Certificate {
  id        Int      @id @default(autoincrement())
  name      String
  issuer    String?
  date      DateTime?
  fileUrl   String?
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  createdAt DateTime @default(now())
}

model Resume {
  id        Int      @id @default(autoincrement())
  fileUrl   String
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  updatedAt DateTime @updatedAt
}
